FROM alpine:edge

LABEL Maintainer="Marko Dojkic <marko.dojkic@gmail.com>"
LABEL Description="Docker container for running 'SingiAttend' BACK-END on Alpine Linux"

# Install OpenJDK 17 and dependencies
RUN apk update && \
    apk add --no-cache openjdk17

# Set the working directory inside the container
WORKDIR /

# Copy the JAR file into the container (replace with your actual file)
ADD SingiAttend-Server-2.5.0.jar app.jar

# Expose the port your application runs on
EXPOSE 8080

# Command to run your application
ENTRYPOINT ["java", "-jar", "/app.jar"]
